<Window x:Class="Telhai.CS.CsharpCourse._05_WpfLinq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.CS.CsharpCourse._05_WpfLinq"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="198*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="lbl" Grid.ColumnSpan="2" Content="Songs" Background="AliceBlue" HorizontalAlignment="Stretch" FontSize="20px"  VerticalAlignment="Top"/>
        <StackPanel   Background="AliceBlue" Grid.Row="1"  Grid.Column="0" >
            <Button Name="btn1" Margin="5,5,5,5" Click="btn1_Click"  Content="Button"/>
            <Button Name="btn2" Margin="5,5,5,5" Content="Button" Click="btn2_Click"/>
            <Button Name="btn3" Margin="5,5,5,5" Content="Button" Click="btn3_Click"/>
        </StackPanel>
        <ListBox Name="songsListBox" Grid.Column="1" Background="WhiteSmoke" Grid.Row="1" />

    </Grid>
</Window>
